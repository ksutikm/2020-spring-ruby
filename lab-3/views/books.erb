<div class="grid-x grid-padding-x">
    <div class="large-12 cell">
        <h3>Список книг</h3>
    </div>


    <div class="large-12 cell">
        <a href="books/new" class="button">Добавить запись</a>
    </div>

    <div class="large-12 cell">
        <table>
            <thead>
            <tr>
                <th>Дата прочтения</th>
                <th>Автор «Название»</th>
            </tr>
            </thead>
            <tbody>
            <% @sorted_books.each do |book| %>
                <tr>
                <td><%= book.date %></td>
                <td><%= book.author %> "<%= book.name %>"</td>
                </tr>
            <% end %>
            </tbody>
            </table>
    </div>
</div>