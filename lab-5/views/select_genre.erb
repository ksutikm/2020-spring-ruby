<div class="grid-x grid-margin-x">
  <div class="cell large-12">
    <h3>Подбор книг по жанру</h3>
  </div>
</div>

<% form({ method: :post }, { obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:genre, type: :select, label: 'Жанр', options: BookGenreType.all_types, add_blank: true)%>
      <%= f.button(value: 'Подобрать', class: 'button ') %>
      <a href="<%= library_path %>" class="button secondary">
        Назад в главное меню
      </a>
    </div>
  </div>
<% end %>

<div class="grid-x grid-margin-x">
  <div class="cell large-12">
    <h5>Список книг</h5>
  </div>

  <div class="large-12 cell">
    <% if @select_books.empty? %>
      <div class="callout warning">
        Согласно вашему фильтру никаких книг не было найдено
      </div>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Автор</th>
            <th>Название</th>
          </tr>
        </thead>
        <tbody>
          <% @select_books.each do |book| %>
            <tr>
              <td><%= book.author %></td>
              <td><%= book.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>