<div class="grid-x grid-margin-x">
  <div class="cell large-12 warning">
    Вы действительно хотите удалить <%= choice %> <%= choice_text %>?
  </div>
</div>

<% form({ method: :post }, { obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:confirmation, type: :checkbox, label: 'Подтверждаю удаление') %>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: 'Удалить', class: 'button warning') %>
      <a href="<%= back_location %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>