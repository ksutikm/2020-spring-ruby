<% form({ method: :post }, { obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:title, type: :text, label: 'Название книги', placeholder: 'Искусство любить') %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:author, type: :text, label: 'Автор', placeholder: 'Эрих Фромм') %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:published_on, type: :date, label: 'Дата публикации', placeholder: '1956-08-08') %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:mark, type: :text, label: 'Оценка', placeholder: '5') %>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: form_type, class: 'button') %>
      <a href="<%= back_location %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>